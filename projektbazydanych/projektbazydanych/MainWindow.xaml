<Window x:Class="projektbazydanych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektbazydanych"
        mc:Ignorable="d"
        Title="Logowanie" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Nagłówek główny -->
            <TextBlock Text="Wypożyczalnia aut"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Black"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,30"/>

            <!-- Wybór roli -->
            <TextBlock Text="Wybierz typ użytkownika:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <CheckBox x:Name="CheckPracownik" Content="Pracownik" Margin="10" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="CheckKlient" Content="Klient" Margin="10" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            </StackPanel>

            <!-- Panel logowania (ukryty na początku) -->
            <Border x:Name="LoginPanel" BorderBrush="Black" BorderThickness="2" Padding="20"
                    Margin="20" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Logowanie"
                               FontWeight="Bold"
                               FontSize="16"
                               TextAlignment="Center"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="login" Width="60" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="LoginTextBox" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="haslo" Width="60" VerticalAlignment="Center" FontWeight="Bold"/>
                        <PasswordBox x:Name="PasswordBox" Width="200"/>
                    </StackPanel>

                    <Button Content="Zaloguj"
                            Width="100"
                            HorizontalAlignment="Center"
                            Click="LoginButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>

