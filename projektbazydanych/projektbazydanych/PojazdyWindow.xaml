<Window x:Class="projektbazydanych.PojazdyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista pojazdow" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Lista pojazdow"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <DataGrid x:Name="PojazdyGrid" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rejestracja" Binding="{Binding NumerRejestracyjny}" Width="*"/>
                    <DataGridTextColumn Header="Marka" Binding="{Binding Marka}" Width="*"/>
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="Rok" Binding="{Binding RokProdukcji}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                <Button Content="Dodaj pojazd" Width="120" Click="DodajPojazd_Click" Margin="0,0,10,0"/>
                <Button Content="Usun pojazd" Width="120" Click="UsunPojazd_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
