<Window x:Class="projektbazydanych.PracownikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Panel" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
	<Grid Background="White">
		<StackPanel Margin="20" HorizontalAlignment="Center">

			<TextBlock Text="Employee Panel"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

			<WrapPanel HorizontalAlignment="Center" ItemWidth="120" ItemHeight="120">

				<!-- Vehicles button -->
				<Button Width="120" Height="120" Margin="10" Click="OtworzPojazdy_Click">
					<StackPanel>
						<TextBlock Text="Vehicles" TextAlignment="Center"/>
					</StackPanel>
				</Button>

				<!-- Rentals button -->
				<Button Width="120" Height="120" Margin="10" Click="OtworzWypozyczenia_Click">
					<StackPanel>
						<TextBlock Text="Rentals" TextAlignment="Center"/>
					</StackPanel>
				</Button>

				<!-- Service button -->
				<Button Width="120" Height="120" Margin="10" Click="OtworzSerwis_Click">
					<StackPanel>
						<TextBlock Text="Service" TextAlignment="Center"/>
					</StackPanel>
				</Button>

				<!-- Drivers button with event -->
				<Button Width="120" Height="120" Margin="10" Click="OtworzKierowcow_Click">
					<StackPanel>
						<TextBlock Text="Drivers" TextAlignment="Center"/>
					</StackPanel>
				</Button>
			</WrapPanel>

			<TextBlock Text="(Prototype - functions not yet active)"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="10"
                       HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>

