<Window x:Class="projektbazydanych.PracownikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Pracownika" Height="450" Width="350" WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F0F0">
        <Border CornerRadius="10" Background="White" Padding="20" Margin="20" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Panel pracownika" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

                <Button Content="Pojazdy" Click="OtworzPojazdy_Click" Width="200" Margin="0,5" Height="40" />
                <Button Content="Wypozyczenia" Click="OtworzWypozyczenia_Click" Width="200" Margin="0,5" Height="40" />
                <Button Content="Serwis" Click="OtworzSerwis_Click" Width="200" Margin="0,5" Height="40" />
                <Button Content="Kierowcy" Click="OtworzKierowcow_Click" Width="200" Margin="0,5" Height="40" />

                <Button Content="Wyloguj" Click="Wyloguj_Click" Width="200" Margin="0,20,0,20" Height="40" Background="#E74C3C" Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
